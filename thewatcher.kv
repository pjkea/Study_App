<MyScreenManager>:
    transition: FadeTransition()
    AskAIScreen:
        name: 'ask_ai'

<AskAIScreen>:
    name: 'ask_ai'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        MDToolbar:
            title: "THE WATCHER"
            elevation: 10

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            MDLabel:
                text: "Ask AI"
                theme_text_color: "Primary"
                font_style: "H4"
                halign: "center"

            MDTextField:
                id: question_field
                hint_text: "Type your question here"
                mode: "rectangle"
                size_hint_x: None
                width: dp(300)
                pos_hint: {"center_x": 0.5}

            MDRaisedButton:
                text: "Ask"
                size_hint: None, None
                size: dp(100), dp(48)
                pos_hint: {"center_x": 0.5}
                on_release: app.ask_ai(question_field.text)

            ScrollView:
                MDLabel:
                    id: response_label
                    text: ""
                    theme_text_color: "Secondary"
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding_x: dp(10)
                    padding_y: dp(10)
